<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background_blue"> \

    <ImageView
        android:id="@+id/splash_logo_image"
        android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/logo"
    android:scaleType="fitCenter"
    app:layout_constraintBottom_toTopOf="@+id/splash_app_name_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/splash_app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aldrich"
        android:text="bluem"
        android:textColor="@color/logo_text_blue"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/splash_tagline_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo_image" />

    <TextView
        android:id="@+id/splash_tagline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aldrich"
        android:text="EMERGENCY APP"
        android:textColor="@color/logo_text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_app_name_text" />

</androidx.constraintlayout.widget.ConstraintLayout>